=content_for(:breadcrumb) do
  ul.breadcrumbs
    li
      =link_to 'Home', root_path
    li
      =link_to 'Countries', countries_path
    li.current
      =link_to @country.name, @country
h2
  |Name: #{@country.name}
  =link_to edit_country_path(@country)
    i.fi-pencil.pad-left-large

h3 Flags:
#flags
  =image_pack_tag @country.small_image
  =image_pack_tag @country.large_image
  =image_pack_tag @country.xl_image
  =image_pack_tag @country.disabled_image
