=content_for(:breadcrumb) do
  ul.breadcrumbs
    li
      =link_to 'Home', root_path
    li
      =link_to @event.display_name, @event
    li.current
      =link_to 'Scoring', my_game_path(@event)
.row
  .columns.small-12.medium-8
    h2
      =@event.display_name

.row
  .small-12.medium-6.columns
    .row.collapse.prefix-radius
      .small-6.medium-6.columns
        label.prefix Your UK score prediction
      .small-6.medium-6.columns
        input type="text" disabled="true" value=@pp.predicted_uk_score
  .small-12.medium-6.columns
    label.inline You have scored #{@pp.completed_scores} acts
-if @event.archived? && @event.actual_uk_score.any?
  .row
    .small-12.medium-6.columns
      .row.collapse.prefix-radius
        .small-6.medium-6.columns
          label.prefix Actual UK score
        .small-6.medium-6.columns
          input type="text" disabled="true" value=@event.actual_uk_score

.row
  .columns.small-12
    table
      thead
        tr
          th act
          th Country
          th.angled Score
          th.angled Weirdest
          th.angled Fattest
          th.angled Best Wail

      -@pp.scores.scoring_order(@pp.id).each do |eps|
        tbody
          tr
            td =eps.participating_country.position
            -if eps.score.blank?
              td =eps.participating_country.country.name
              td colspan='4'
                =link_to 'Record your score', my_scoring_path(year: @event.year, act: eps.participating_country.position)
            -else
              td
                =link_to eps.participating_country.country.name, my_scoring_path(year: @event.year, act: eps.participating_country.position)
              td =eps.score
              td
                i.fi-check
              td
                i.fi-checkbox
              td x